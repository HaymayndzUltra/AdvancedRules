FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Copy requirements first for better caching
COPY requirements.queue.txt .

# Install dependencies
RUN pip install --no-cache-dir -r requirements.queue.txt

# Copy the rest of the application
COPY . .

# Set Python path and metrics config
ENV PYTHONPATH=/app
ENV AR_ENABLE_METRICS=1
ENV AR_METRICS_PORT=9108

# Default command
CMD ["python", "-m", "observability.exporters.prometheus", "--port", "9108"]
