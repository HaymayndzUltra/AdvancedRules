{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AdvancedRules Flow Schema",
  "description": "Schema for workflow definitions in AdvancedRules framework",
  "type": "object",
  "required": ["id", "name", "steps"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^flow_[a-z_][a-z0-9_]*$",
      "description": "Unique flow identifier"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Human-readable flow name"
    },
    "description": {
      "type": "string",
      "maxLength": 1000,
      "description": "Flow purpose and context"
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "task_id"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^step_[0-9]+$",
            "description": "Step identifier within flow"
          },
          "task_id": {
            "type": "string",
            "description": "Reference to task definition"
          },
          "depends_on": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Step dependencies"
          },
          "on_success": {
            "type": "string",
            "description": "Next step on success"
          },
          "on_failure": {
            "type": "string",
            "description": "Next step on failure"
          }
        },
        "additionalProperties": false
      },
      "description": "Ordered sequence of steps"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "author": {"type": "string"},
        "version": {"type": "string"},
        "created": {"type": "string", "format": "date-time"},
        "tags": {
          "type": "array",
          "items": {"type": "string"}
        }
      },
      "description": "Flow metadata"
    }
  },
  "additionalProperties": false
}
